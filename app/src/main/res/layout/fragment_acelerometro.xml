<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Aquí puedes agregar los elementos de diseño que desees para el acelerómetro -->

    <TextView
        android:id="@+id/tvAccelerometerData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del Acelerómetro" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- Otros elementos de diseño relacionados con el acelerómetro -->

</LinearLayout>